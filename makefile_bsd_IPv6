# makefile for newLISP v. 10.x.x on BSDs: FreeBSD, OpenBSD and IPv6 potocol
#

OBJS = newlisp.o nl-symbol.o nl-math.o nl-list.o nl-liststr.o nl-string.o nl-filesys.o \
	nl-sock.o nl-import.o nl-xml.o nl-web.o nl-matrix.o nl-debug.o pcre.o

# the option -fno-strict-aliasing may not be available on some BSD versions 

CFLAGS = -m32 -Wall -Wno-uninitialized -fno-strict-aliasing -O2 -c -g -DREADLINE -D_BSD -DIPV6
# for netBSD use following line
#CFLAGS = -m32 -Wall -Wno-uninitialized -Wno-strict-aliasing -O2 -c -g -D_BSD -DIPV6

CC = gcc

default: $(OBJS)
	$(CC) $(OBJS) -m32 -g -lm -lreadline -lncurses -o newlisp
# for netBSD use following line
#	$(CC) $(OBJS) -m32 -g -lm -o newlisp
	strip newlisp

.c.o:
	$(CC) $(CFLAGS) $<

$(OBJS): primes.h protos.h makefile_bsd

